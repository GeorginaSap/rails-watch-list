<%= simple_form_for [@list, @bookmark] do |form| %>
  <div class="form-group">
    <%= form.input :movie_id, collection: Movie.all, label: "Choose a movie", as: :select, prompt: "Select a movie" %>
  </div>
  <div class="form-group">
    <%= form.input :comment, as: :text %>
  </div>
  <div class="form-group">
    <%= form.button :submit, "Add Movie", class: "btn btn-primary" %>
  </div>
<% end %>
